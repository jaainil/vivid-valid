{
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "includeFiles": ["backend/**"]
    }
  },
  "rewrites": [{ "source": "/api/(.*)", "destination": "/api/index.js" }],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ]
}
