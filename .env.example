# ========================================
# FRONTEND CONFIGURATION
# ========================================

# API Configuration
VITE_API_BASE_URL=http://localhost:4000/api

# Application Configuration
VITE_APP_NAME=Email Verifier Pro
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=The most advanced email verification tool with real-time validation, bulk processing, and beautiful progress animations

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=.csv,.txt
VITE_MAX_BULK_EMAILS=1000

# Frontend Server Configuration
FRONTEND_PORT=8080

# ========================================
# BACKEND CONFIGURATION
# ========================================

# Server Configuration
NODE_ENV=development
PORT=4000
DEFAULT_PORT=4000
FRONTEND_URL=http://localhost:8081
BACKEND_URL=http://localhost:4000
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:8081
CORS_ORIGIN_2=http://localhost:3000
CORS_ORIGIN_3=http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
SINGLE_EMAIL_RATE_WINDOW_MS=60000
SINGLE_EMAIL_RATE_MAX=20
BULK_EMAIL_RATE_WINDOW_MS=300000
BULK_EMAIL_RATE_MAX=3

# SMTP Configuration
SMTP_TIMEOUT=5000
SMTP_FROM_DOMAIN=validator.example.com
SMTP_PORT=25
SMTP_SECURE=false

# Cache Configuration
DNS_CACHE_TTL=300
DISPOSABLE_CACHE_TTL=86400
TYPO_CORRECTION_CACHE_TTL=3600
BULK_CACHE_TTL=1800

# Validation Configuration
MAX_EMAIL_LENGTH=320
MAX_LOCAL_PART_LENGTH=64
MAX_DOMAIN_LENGTH=253
MAX_DOMAIN_LABEL_LENGTH=63
MIN_TLD_LENGTH=2
MAX_TLD_LENGTH=6

# Bulk Validation Configuration
MAX_CONCURRENCY=10
BATCH_SIZE=25
BATCH_DELAY_MS=100
MAX_BULK_EMAILS=1000

# Scoring Configuration
BASE_SCORE=50
SYNTAX_WEIGHT=25
DOMAIN_WEIGHT=20
MX_WEIGHT=25
SMTP_WEIGHT=20
DOMAIN_HEALTH_WEIGHT=15

# Strict Mode Thresholds
STRICT_MODE_SCORE_THRESHOLD=90
STRICT_MODE_RISKY_THRESHOLD=70
NORMAL_MODE_SCORE_THRESHOLD=85
NORMAL_MODE_RISKY_THRESHOLD=65

# Penalty Configuration
DISPOSABLE_PENALTY=40
DISPOSABLE_PENALTY_STRICT=50
BLACKLISTED_PENALTY=50
BLACKLISTED_PENALTY_STRICT=60
ROLE_BASED_PENALTY=15
ROLE_BASED_PENALTY_STRICT=25
FREE_PROVIDER_PENALTY=5
FREE_PROVIDER_PENALTY_STRICT=10
TYPO_PENALTY=15
TYPO_PENALTY_STRICT=25

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_TIMEOUT_MS=10000
HEALTH_CHECK_START_PERIOD_MS=40000
HEALTH_CHECK_RETRIES=3

